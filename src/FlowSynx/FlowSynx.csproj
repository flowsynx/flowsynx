<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<AssemblyName>flowsynx</AssemblyName>
		<UserSecretsId>ee556b65-5e94-4153-88d3-9256fb61d188</UserSecretsId>
		<IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
		<Title>FlowSynx</Title>
		<Company>FlowSynx</Company>
		<Copyright>Â© FlowSynx. All rights reserved.</Copyright>
		<Authors>flowsynx</Authors>
		<RepositoryUrl>https://github.com/flowsynx/flowsynx</RepositoryUrl>
		<PackageProjectUrl>https://flowsynx.io</PackageProjectUrl>
		<RepositoryType>git</RepositoryType>
		<Description>Seamless Workflow Automation - Declarative, Extensible, and Fully Controllable</Description>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<DebugSymbols>False</DebugSymbols>
		<DebugType>None</DebugType>
	</PropertyGroup>

	<ItemGroup>
		<None Include="appsettings.Development.json">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
			<CopyToPublishDirectory>Never</CopyToPublishDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="10.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="10.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="10.0.0" />
		<PackageReference Include="Swashbuckle.AspNetCore" Version="10.0.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\FlowSynx.Application\FlowSynx.Application.csproj" />
		<ProjectReference Include="..\FlowSynx.Infrastructure.Logging\FlowSynx.Infrastructure.Logging.csproj" />
		<ProjectReference Include="..\FlowSynx.Infrastructure.Messaging\FlowSynx.Infrastructure.Messaging.csproj" />
		<ProjectReference Include="..\FlowSynx.Infrastructure.Persistence.Postgres\FlowSynx.Infrastructure.Persistence.Postgres.csproj" />
		<ProjectReference Include="..\FlowSynx.Infrastructure.Persistence.Sqlite\FlowSynx.Infrastructure.Persistence.Sqlite.csproj" />
		<ProjectReference Include="..\FlowSynx.Infrastructure.Runtime\FlowSynx.Infrastructure.Runtime.csproj" />
		<ProjectReference Include="..\FlowSynx.Infrastructure.Secrets\FlowSynx.Infrastructure.Security.csproj" />
		<ProjectReference Include="..\FlowSynx.Infrastructure.Serializations.Json\FlowSynx.Infrastructure.Serializations.Json.csproj" />
		<ProjectReference Include="..\FlowSynx.Infrastructure.Persistence.Abstractions\FlowSynx.Infrastructure.Persistence.Abstractions.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Localization\FlowSynxResources.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>FlowSynxResources.resx</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Localization\FlowSynxResources.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>FlowSynxResources.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	</ItemGroup>

	<Target Name="RemoveDevAppSettingsFromPublish" AfterTargets="ComputeFilesToPublish">
		<ItemGroup>
			<ResolvedFileToPublish Remove="@(ResolvedFileToPublish)" Condition=" '%(ResolvedFileToPublish.RelativePath)' == 'appsettings.Development.json' " />
		</ItemGroup>
		<Message Text="Excluded appsettings.Development.json from publish output." Importance="Low" />
	</Target>
</Project>
